@model IEnumerable<UsuarioModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Usuários</h1>
        <a class="btn btn-success mx-2 text-decoration-none" asp-controller="Usuario" asp-action="Cadastrar">Cadastrar novo Usuário</a>
    </div>

    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">DataNascimento</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null)
            {
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td class="text-right">@usuario.Name</td>
                        <td>@usuario.DataNascimento</td>
                        <td>
                            <div class="d-flex justify-content-between">
                                <a class="btn btn-warning" asp-controller="Usuario" asp-action="Editar" asp-route-id="@usuario.Id">Editar</a>
                                <a asp-controller="Usuario" asp-action="Excluir" asp-route-id="@usuario.Id" class="btn btn-danger">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
